      "category": "simple",
      "url": "https://the-internet.herokuapp.com/key_presses",
      "instruction": "Type in the input field",
      "expected_element": {
        "tag": "input",
        "attributes": {"type": "text"}
      },
      "valid_xpaths": [
        "//input[@type='text']",
        "//input[@id='target']",
        "//input"
      ]
    },
