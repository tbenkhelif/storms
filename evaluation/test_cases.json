{
  "test_cases": [
   
    {
      "id": "drag_001",
      "category": "complex",
      "url": "https://the-internet.herokuapp.com/drag_and_drop",
      "instruction": "Drag element A to element B",
      "expected_element": {
        "tag": "div",
        "attributes": {"id": "column-a"}
      },
      "valid_xpaths": [
        "//div[@id='column-a']",
        "//div[contains(@class, 'column')]//header[text()='A']/..",
        "//div[@draggable='true'][1]"
      ]
    },
    {
